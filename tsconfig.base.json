{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noErrorTruncation": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nestql/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@nestql/common": ["libs/common/src/index.ts"],
      "@nestql/util": ["libs/util/src/index.ts"],
      "@nestql/angular": ["libs/angular/src/index.ts"],
      "@nestql/nestjs": ["libs/nestjs/src/index.ts"],
      "@nestql/example-domain": ["libs/example-domain/src/index.ts"],
      "@nestql/typeorm": ["libs/typeorm/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
